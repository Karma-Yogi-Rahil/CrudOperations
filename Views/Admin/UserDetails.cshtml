@model IEnumerable<UserDetails>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User Details</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle-dotted"></i> Add New User
            </a>
        </div>
    </div>
</div>
<br>
<br>


<table class="table table-hover">
    <thead>
    <th>
        Id
    </th>
    <th>
        Name
    </th>
    <th>
        Email Id
    </th>
    <th>
        Password
    </th>
    <th>
        Created On
    </th>

    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="table-dark">
                <td>
                    @obj.Id
                </td>
                <td>@obj.Name</td>
                <td >@obj.EmailId</td>
                <td>@obj.EncryptedPassword</td>
                <td>@obj.CreatedDateTime</td>
                <td>
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-warning">Edit</a>
                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>

