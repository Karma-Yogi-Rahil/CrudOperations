@{
}
@model UserDetails

@{
    ViewData["Title"] = "Create";
}


<form method="post">
    <div class="border p-3 mt-4">

        <h1 class="text-center">Edit Details</h1>
        <div class="mb-3">

            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />
            <label asp-for="EmailId" class="form-label mt-4"></label>
            <input asp-for="EmailId" class="form-control" />
            <span asp-validation-for="EmailId" class="text-danger"></span>
            <br />
            <label asp-for="EncryptedPassword" class="form-label mt-4"></label>
            <input asp-for="EncryptedPassword" class="form-control" />
            <span asp-validation-for="EncryptedPassword" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary" style="width:contain">Edit</button>
            <a asp-controller="Admin" asp-action="UserDetails" class="btn btn-secondary" style="width:contain">Back</a>
        </div>

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}